<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.workers.nearwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NearWork"
        tools:targetApi="31">
        <activity
            android:name=".worker.WorkerHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".client.WorkHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".client.PendingWorkDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".client.ClientHomeActivity"
            android:exported="false" />
        <activity
            android:name=".client.DashboardActivity"
            android:exported="false"
            android:label="My Job Posts" />
        <activity
            android:name=".client.ClientDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".client.ApplicantsListActivity"
            android:exported="false" />
        <activity
            android:name=".client.AppliedWorkersActivity"
            android:exported="false" />
        <activity
            android:name=".client.WorkerDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".client.CreateWorkPostActivity"
            android:exported="false" />
        <activity
            android:name=".worker.WorkerHomeActivity"
            android:exported="false" />
        <activity
            android:name=".worker.AcceptedWorkActivity"
            android:exported="false" />
        <activity
            android:name=".worker.RequestedWorkDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".worker.AssignedWorkActivity"
            android:exported="false" />
        <activity
            android:name=".worker.WorkerRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".worker.HiredJobsActivity"
            android:exported="false" />
        <activity
            android:name=".auth.WorkerLoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.ClientLoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.ClientSignupActivity"
            android:exported="false" />
        <activity
            android:name=".auth.ClientRegisterActivity"
            android:exported="false" />
    </application>

</manifest>